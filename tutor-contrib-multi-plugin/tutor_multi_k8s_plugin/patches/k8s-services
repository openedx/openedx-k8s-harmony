---
# For multi-instance clusters. Allow one central load balancer on the cluster to
# handle HTTPS certs and forward traffic to each Open edX instance's Caddy
# instance.
{%- set HOSTS = [LMS_HOST, CMS_HOST, PREVIEW_HOST, MFE_HOST] + MULTI_K8S_INGRESS_HOST_LIST %}
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: central-lb-to-caddy-ingress
  labels:
    app.kubernetes.io/component: ingress
  annotations:
    cert-manager.io/cluster-issuer: tutor-multi-global
spec:
  ingressClassName: {{ MULTI_K8S_INGRESS_CLASS_NAME }}
  rules:
  {%- for host in HOSTS if host is defined %}
  - host: "{{ host }}"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: caddy
            port:
              number: {{ CADDY_HTTP_PORT }}
    {%- endfor %}
  # The tls field is needed when using ingress-nginx+certmanager
  {%- if 'nginx' in MULTI_K8S_INGRESS_CLASS_NAME %}
  tls:
  - hosts:
    {%- for host in HOSTS if host is defined %}
    - {{ host -}}
    {% endfor %}
    secretName: central-lb-ingress-tls
  {%- endif %}
